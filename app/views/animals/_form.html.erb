div class=“form-group  ”>



  <%= form_with model: @animal, local: true, html: { multipart: true } do |f| %>
    <div class="title">
    
      <%= f.label :breed, class: "form-label" %>
      
      <br>
      
      <%= f.text_field :breed, class: "form-control" %>
     
      <br><br>

      <%= f.label :name, class: "form-label" %>
      <%= f.file_field :name, class: "form-control" %>
   
    </div>
   
      <%= f.label :description, class: "form-label" %>
      <br>
      <%= f.text_field :description, class: "form-control" %>
      <br><br>
    
    
    <%= f.label :age, class: "form-label" %>
      <%= f.file_field :age, class: "form-control" %>
    
      <br><br>

      <%= f.label :image_url, class: "form-label" %>
      <%= f.file_field :image_url, class: "form-control" %>
      <br><br>

      <%= f.label :sex, class: "form-label" %>
      <%= f.file_field :sex, class: "form-control" %>

      <br><br>

      <%= f.label :species, class: "form-label" %>
      <%= f.file_field :species, class: "form-control" %>
      <br>
      <br>

</div>
    <%= f.submit %>

  <% end %>