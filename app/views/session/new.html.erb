<h2>Login Page</h2>
<% if flash[:error] %>
    <strong>
    <%= flash[:error] %>
    </strong>
    <br>
<% end %>

<br>
    
<%= form_with url: login_path, local: true do |form| %>


    <div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "example@email.com" %>
    </div>

    <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "password" %>
    </div>

    <%= form.submit "Login" %>
    
<% end %>